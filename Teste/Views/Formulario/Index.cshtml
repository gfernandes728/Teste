@model Teste.Models.ViewModels.FormularioViewModels

<link rel="stylesheet" href="~/css/formulario.css" />
<link rel="stylesheet" href="~/css/selecao.css" />

@{
    ViewData["Title"] = "Formulario";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading text-center">
                <h2 class="text-warning">Section 1</h2>
                <p>Selecione alguns itens</p>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                @foreach (var item in Model.Selecoes)
                {
                    <button class="btn btn-light selection-btn @(item.Selected ? "selected" : "")" data-id="@item.Value">
                        @item.Text
                    </button>
                }
            </div>
        </div>
    </div>
</div>

<div id="section2-container"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
<script src="~/js/formulario.js" asp-append-version="true"></script>

